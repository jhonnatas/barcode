<div class="simple-login-container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mt-5">
      <div class="col-md-12 form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: 'form-control' %>
      </div>  
    </div>  

    <div class="row mt-2">
      <div class="col-md-12 form-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Senha", class: 'form-control'  %>
      </div>
    </div>  

    <% if devise_mapping.rememberable? %>
      <div class="row mt-2">
        <div class="col-md-12 form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>  
    <% end %>

    <div class="row mt-2">
      <div class="col-md-12 form-group">      
        <%= f.submit "Log in", class: 'btn btn-sm btn-block btn-login' %>
      </div>
    </div>  
  <% end %>
</div>