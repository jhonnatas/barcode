<h1>Itens</h1>

<%= render 'import' %>

<div id="items">
  <table class="table mt-3">  
    <thead>
      <tr>
        <th scope="col">Tombamento</th>
        <th scope="col">Descrição</th>  
        <th scope="col"></th>
      </tr>
    </thead>

    <tbody>
    <% @items.each do |item| %>
      <%= render item %>
      <p>
        <%= link_to "", item %>
      </p>
    <% end %>
    </tbody>
  </div>
  
</div>

<div>
 <%= render 'buttons' %> 
</div>  

<%= paginate @items, theme: 'bootstrap-5',
                   pagination_class: "pagination-sm mt-3 flex-wrap justify-content-center",
                   nav_class: "d-inline-block" %>
