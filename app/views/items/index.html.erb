<h1><i class="fa-regular fa-circle-plus"></i>Itens</h1>

<%= render 'import' %>

<div id="buttons">
 <%= render 'buttons' %> 
</div>  

<div id="items">
  <table class="table able-responsive mt-3 card">  
    <thead>
      <tr>
        <th scope="col">Tombamento</th>
        <th scope="col">Descrição</th>  
        <th scope="col">Ação</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <%= render item %>
        <p>
          <%= link_to "", item %>
        </p>
      <% end %>      
    </tbody>
  </div>  
</div>

<%= render 'shared/modal/utilizar' %>
<%= render 'shared/modal/sobre' %>